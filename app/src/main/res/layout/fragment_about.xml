<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/generic_background">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Σχετικά με την Εφαρμογή" />

    </com.google.android.material.appbar.AppBarLayout>

    <ImageView
        android:id="@+id/about_return"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="10dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="@+id/topAppBarLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Η εφαρμογή αναπτύχθηκε από τον Μπάρκο Γεώργιο,
στα πλαίσιο της διπλωματικής του εργασίας. Για οποιαδήποτε απορία ή ερώτηση,
παρακαλώ επικοινωνήστε στο georgebarkos@gmail.com."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>