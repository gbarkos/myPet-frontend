<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/topAppBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topAppBar"
                    style="@style/Widget.MaterialComponents.Toolbar.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="Προσθήκη Υπενθύμισης" />

            </com.google.android.material.appbar.AppBarLayout>
            <ImageView
                android:id="@+id/settings_return"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:elevation="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                app:layout_constraintEnd_toEndOf="@+id/topAppBarLayout"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:background="@drawable/generic_background">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">



                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newReminderPetHint"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Κατοικίδιο"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="1dp"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"

                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.95">

                                <AutoCompleteTextView
                                    android:id="@+id/newReminderPet"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:textColor="@color/black" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newReminderScheduledDateHint"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Ημερομηνία Υπενθύμισης"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="1dp"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_baseline_calendar_today_24"
                                app:startIconCheckable="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/newReminderTypeHint"
                                app:layout_constraintWidth_percent="0.95">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/newReminderScheduledDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:minWidth="100dp"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newReminderTypeHint"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Τύπος"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="1dp"
                                app:errorEnabled="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/newReminderPetHint"
                                app:layout_constraintWidth_percent="0.95"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
                                <AutoCompleteTextView
                                    android:id="@+id/newReminderType"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none"
                                    android:textColor="@color/black"/>
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/newReminderScheduledTimeHint"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:hint="Ώρα Υπενθύμισης"
                                app:boxBackgroundColor="@color/white"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="1dp"
                                app:errorEnabled="true"
                                app:startIconDrawable="@drawable/ic_baseline_access_time_24"
                                app:startIconCheckable="true"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/newReminderScheduledDateHint"
                                app:layout_constraintWidth_percent="0.95">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/newReminderScheduledTime"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:minWidth="100dp"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <Button
                                android:id="@+id/submitNewReminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ΥΠΟΒΟΛΗ"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">
                            </Button>

                        </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</layout>
