<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="petsviewmodelInfo"
            type="com.example.mypet.viewmodels.PetsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <ImageView
            android:id="@+id/petInfoProfilePic"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.cardview.widget.CardView
            android:layout_width="356dp"
            android:layout_height="245dp"
            android:layout_marginTop="4dp"
            android:padding="20dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.512"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/petInfoProfilePic">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/petInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet name goes here"
                    android:textSize="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/petInfoBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pet Breed goes here"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoName" />

                <TextView
                    android:id="@+id/petInfoSex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Sex goes here"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/petInfoBirthdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Pet Birthdate goes here"
                    app:layout_constraintEnd_toEndOf="parent"

                    app:layout_constraintTop_toBottomOf="@+id/petInfoSex" />

                <TextView
                    android:id="@+id/petInfoColour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Colour goes here"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoBreed" />

                <TextView
                    android:id="@+id/petInfoHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Pet Height"
                    app:layout_constraintEnd_toStartOf="@+id/petInfoWeight"
                    app:layout_constraintStart_toEndOf="@+id/petInfoColour"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoBirthdate" />

                <TextView
                    android:id="@+id/petInfoWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet weight"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="30dp"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoBirthdate" />

                <TextView
                    android:id="@+id/petInfoDistinguishingMarks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet Distinguishing Marks go here"
                    android:layout_marginTop="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoHeight" />

                <TextView
                    android:id="@+id/petInfoId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pet ID goes here"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/petInfoDistinguishingMarks" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
